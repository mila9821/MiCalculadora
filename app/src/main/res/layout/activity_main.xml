<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|bottom"
    android:background="#090909"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/proceso"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:textSize="40sp"
        android:gravity="end"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:textSize="40sp"
        android:gravity="end"
        android:textColor="@color/white"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="6"
        android:orientation="vertical"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TableRow
            android:layout_width="286dp"
            android:layout_height="307dp">
            <Button
                android:id="@+id/avanzada"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_round_format_align_justify_24"/>
            <Button
                android:id="@+id/borrar"
                android:layout_width="50dp"
                android:onClick="borrar"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_baseline_backspace_24"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="280dp"
                app:layout_constraintRight_toRightOf="parent"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <Button
            android:id="@+id/porcentaje"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/parentesis"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="()"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/limpiar"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="C"
            android:onClick="clear"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/dividir"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="/"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp">

        <Button
            android:id="@+id/siete"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/ocho"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/nueve"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/multiplicar"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="X"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <Button
            android:id="@+id/cuatro"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/cinco"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/seis"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/resta"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="-"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <Button
            android:id="@+id/uno"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/dos"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/tres"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/suma"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="+"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <Button
            android:id="@+id/signo"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/cero"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/punto"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="."
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/igual"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="="
            android:onClick="igual"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>



</LinearLayout>